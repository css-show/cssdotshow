{
  "name": "cssdotshow",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8008",
    "build": "next build && next export",
    "lint": "next lint",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "bootstrap-icons": "^1.4.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.21.1",
    "gray-matter": "^4.0.3",
    "next": "^11.0.0",
    "next-i18next": "^8.6.0",
    "next-pwa": "^5.2.24",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^13.0.0",
    "remark-html": "^13.0.2",
    "rxjs": "^7.0.0",
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "autoprefixer": "^10.3.1",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "postcss": "^8.3.6",
    "semantic-release": "^17.4.5",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhanghecool/cssdotshow.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "The CSS Show 变更如下："
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "./out",
              "label": "The CSS Show",
              "name": "css.show files"
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "components/*",
            "lib/*",
            "pages/*",
            "posts/*",
            "public/*",
            "styles/*",
            "CHANGELOG.md",
            "package.json",
            "yarn.lock"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
